<%- include ('../partials/authHeader') %>

<div class="max-w-md mx-auto mt-10 p-4">
  <h2 class="text-2xl font-bold mb-4">Sign Up</h2>

  <% if (typeof error !== 'undefined') { %>
    <div class="text-red-600 mb-2"><%= error %></div>
  <% } %>

  <form action="/signup" method="POST" class="space-y-4 flex flex-col">
    <input type="text" name="username" placeholder="Username" required class="w-full p-2 border" />
    <input type="email" name="email" placeholder="Email" required class="w-full p-2 border" />
    <input type="password" name="password" placeholder="Password" required class="w-full p-2 border" />
    <button type="submit" class="px-4 py-2 bg-blue-500 text-white ml-auto rounded hover:bg-blue-600">Create Account</button>
  </form>
</div>