<nav class="p-4 bg-gray-100 flex justify-between">
  <% if (currentUser) { %>
    <p>Welcome, <%= currentUser.username %></p>
  <% } else { %>
    <p>Welcome</p>
  <% } %>

  <% if (session.userId) { %>
    <a href="/logout">Logout</a>
  <% } else { %>
    <div class="space-x-2">
      <a href="/login">Login</a>
      <a href="/signup">Sign Up</a>
    </div>
  <% } %>
</nav>