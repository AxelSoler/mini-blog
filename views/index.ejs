<nav class="p-4 bg-gray-100 flex justify-between">
  <a href="/">Home</a>

  <% if (session.userId) { %>
    <a href="/logout">Logout</a>
  <% } else { %>
    <div class="space-x-2">
      <a href="/login">Login</a>
      <a href="/signup">Sign Up</a>
    </div>
  <% } %>
</nav>

<section>
  <h1 class="text-2xl font-bold mb-4">Welcome to Mini Blogs</h1>
  <p class="text-gray-700 mb-6">
    This is a simple blog application built with Node.js and Alpine.js.
  </p>
</section>

<section class="space-y-4 mb-4">
  <% posts.forEach(post => { %>
    <%- include('partials/postCard', { post }) %>
  <% }) %>
</section>

<%- include('partials/createPost') %>
