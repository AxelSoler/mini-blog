<section>
  <h1 class="text-2xl font-bold mb-4">Welcome to Mini Blogs</h1>
  <p class="text-gray-700 mb-6">
    This is a simple blog application built with Node.js and Alpine.js.
  </p>
</section>

<section class="mb-4">
  <form action="/create" method="POST" class="space-y-2">
    <input
      type="text"
      name="title"
      placeholder="Title"
      class="border p-2 w-full"
      required
    />
    <textarea
      name="content"
      placeholder="Content"
      class="border p-2 w-full"
      required
    ></textarea>
    <button type="submit" class="bg-blue-600 text-white px-4 py-2">
      Create Post
    </button>
  </form>
</section>

<section class="space-y-4">
  <% posts.forEach(post => { %>
  <div class="bg-white shadow p-4 rounded flex justify-between">
    <div>
      <h2 class="text-xl font-bold"><%= post.title %></h2>
      <p><%= post.content %></p>
      <p class="text-sm text-gray-500">
        <%= post.createdAt.toLocaleString() %>
      </p>
    </div>
    <div>
      <button type="submit" class="bg-yellow-500 text-white px-2 py-1">
        Edit
      </button>
      <form action="/delete/<%= post.id %>?_method=DELETE" method="POST" class="inline-block">
        <button type="submit" class="bg-red-600 text-white px-2 py-1">
          Delete
        </button>
      </form>
    </div>
  </div>
  <% }) %>
</section>
